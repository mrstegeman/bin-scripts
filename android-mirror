#!/usr/bin/perl

use strict;
use warnings;

use Digest::SHA;
use File::Find;
use File::Path qw(make_path);
use File::Slurp;
use LWP::Simple;
use Term::ANSIColor qw(:constants);
# Make sure Crypt::SSLeay is also installed

# Constants
my $baseUrl = 'https://dl-ssl.google.com/android/repository/';
my $repoXmlBase = 'repository';         # start at 12
my @oldRepoXmlToKeep = ('', '-5', '-6', '-7', '-8', '-10', '-11');
my $repo2XmlBase = 'repository2-';      # start at 1
my @oldRepo2XmlToKeep = ();
my $addonsXmlBase = 'addons_list-';     # start at 3
my @oldAddonsXmlToKeep = (1, 2);

# Script begins here
my $num_args = $#ARGV + 1;
if ($num_args != 1) {
    print "Usage: $0 directory\n";
    exit;
}

# User-defined variables
my $outDir = $ARGV[0];
$outDir =~ s/\/*$/\//;

my $repoXmlUrl = $baseUrl . $repoXmlBase;
my $repoXmlFile = $outDir . $repoXmlBase;

my %fetched = ();
my $repository = "";

# Turn on autoflush for STDOUT
local $| = 1;

make_path($outDir) unless -d $outDir;

foreach my $repo (@oldRepoXmlToKeep)
{
    my $url = "${baseUrl}${repoXmlBase}${repo}.xml";
    my $file = "${outDir}${repoXmlBase}${repo}.xml";

    if (getstore($url, $file) == 200)
    {
        $fetched{$file} = 1;
        $repository .= read_file($file);
    }
}

# Find correct repo XML file, as they tend to increment once in a while.
my $i = 12;
while (head($repoXmlUrl . "-$i.xml"))
{
    $i++;
}
$i--;
$repoXmlUrl .= "-$i.xml";
$repoXmlFile .= "-$i.xml";

if (getstore($repoXmlUrl, $repoXmlFile) != 200)
{
    print RED "Failed to download: ", RESET, "$repoXmlUrl\n";
    exit 1;
}
$fetched{$repoXmlFile} = 1;
$repository .= read_file($repoXmlFile);

print YELLOW "Parsing repository: ", RESET, "$repoXmlFile\n";
while ($repository =~ /(<(sdk:)?checksum(\s+type=['"](?<cksum_type_1>[^'"]+)['"])?>(?<cksum_1>[^<]+)<\/(sdk:)?checksum>\s*)?
                        <(sdk:)?url>(?<url>[^<]+)<\/(sdk:)?url>\s*
                       (<(sdk:)?checksum(\s+type=['"](?<cksum_type_2>[^'"]+)['"])?>(?<cksum_2>[^<]+)<\/(sdk:)?checksum>\s*)?
                      /gsx)
{
    my $cksum_type = defined($+{cksum_type_1}) ? $+{cksum_type_1} :
                         (defined($+{cksum_type_2}) ? $+{cksum_type_2} : 'sha1');
    my $cksum = defined($+{cksum_1}) ? $+{cksum_1} :
                    (defined($+{cksum_2}) ? $+{cksum_2} : undef);
    my $item = $+{url};
    my $url;
    my $file;

    if ($item =~ /^http/)
    {
        if ($item =~ /^\Q$baseUrl\E(.+)/)
        {
            $url = $item;
            $file = $outDir . $1;
        }
        else
        {
            print RED "Not fetching URL: ", RESET, "$item\n";
            next;
        }
    }
    else
    {
        $url = $baseUrl . $item;
        $file = $outDir . $item;
    }

    if (-f $file)
    {
        if (verify_hash($file, $cksum, $cksum_type) != 0)
        {
            unlink($file);
        }
    }

    if (not -f $file)
    {
        print YELLOW "Fetching: ", RESET, "$url ... ";
        my $status = getstore($url, $file);

        if ($status == 200)
        {
            if (verify_hash($file, $cksum, $cksum_type) != 0)
            {
                print RED "CHECKSUM FAILED!", RESET, "\n";
                unlink($file);
            }
            else
            {
                $fetched{$file} = 1;
                print GREEN "SUCCESS!", RESET, "\n";
            }
        }
        else
        {
            print RED "FAILED! ($status)", RESET, "\n";
        }
    }
    else
    {
        $fetched{$file} = 1;
    }
}

# repository2 (Android Studio)
my $repository2 = "";

foreach my $repo (@oldRepo2XmlToKeep)
{
    my $url = "${baseUrl}${repo2XmlBase}${repo}.xml";
    my $file = "${outDir}${repo2XmlBase}${repo}.xml";

    if (getstore($url, $file) == 200)
    {
        $fetched{$file} = 1;
        $repository2 .= read_file($file);
    }
}

my $repo2XmlUrl = $baseUrl . $repo2XmlBase;
my $repo2XmlFile = $outDir . $repo2XmlBase;

# Find correct repo2 XML file, as they tend to increment once in a while.
$i = 1;
while (head($repo2XmlUrl . "$i.xml"))
{
    $i++;
}
$i--;
$repo2XmlUrl .= "$i.xml";
$repo2XmlFile .= "$i.xml";

if (getstore($repo2XmlUrl, $repo2XmlFile) != 200)
{
    print RED "Failed to download: ", RESET, "$repo2XmlUrl\n";
    exit 1;
}
$fetched{$repo2XmlFile} = 1;
$repository2 .= read_file($repo2XmlFile);

print "\n", YELLOW "Parsing repository2: ", RESET, "$repo2XmlFile\n";
while ($repository2 =~ /(<(sdk:)?checksum(\s+type=['"](?<cksum_type_1>[^'"]+)['"])?>(?<cksum_1>[^<]+)<\/(sdk:)?checksum>\s*)?
                         <(sdk:)?url>(?<url>[^<]+)<\/(sdk:)?url>\s*
                        (<(sdk:)?checksum(\s+type=['"](?<cksum_type_2>[^'"]+)['"])?>(?<cksum_2>[^<]+)<\/(sdk:)?checksum>\s*)?
                       /gsx)
{
    my $cksum_type = defined($+{cksum_type_1}) ? $+{cksum_type_1} :
                         (defined($+{cksum_type_2}) ? $+{cksum_type_2} : 'sha1');
    my $cksum = defined($+{cksum_1}) ? $+{cksum_1} :
                    (defined($+{cksum_2}) ? $+{cksum_2} : undef);
    my $item = $+{url};
    my $url;
    my $file;

    if ($item =~ /^http/)
    {
        if ($item =~ /^\Q$baseUrl\E(.+)/)
        {
            $url = $item;
            $file = $outDir . $1;
        }
        else
        {
            print RED "Not fetching URL: ", RESET, "$item\n";
            next;
        }
    }
    else
    {
        $url = $baseUrl . $item;
        $file = $outDir . $item;
    }

    if (-f $file)
    {
        if (verify_hash($file, $cksum, $cksum_type) != 0)
        {
            unlink($file);
        }
    }

    if (not -f $file)
    {
        print YELLOW "Fetching: ", RESET, "$url ... ";
        my $status = getstore($url, $file);

        if ($status == 200)
        {
            if (verify_hash($file, $cksum, $cksum_type) != 0)
            {
                print RED "CHECKSUM FAILED!", RESET, "\n";
                unlink($file);
            }
            else
            {
                $fetched{$file} = 1;
                print GREEN "SUCCESS!", RESET, "\n";
            }
        }
        else
        {
            print RED "FAILED! ($status)", RESET, "\n";
        }
    }
    else
    {
        $fetched{$file} = 1;
    }
}

my $addons = "";

foreach my $addonsXml (@oldAddonsXmlToKeep)
{
    my $url = "${baseUrl}${addonsXmlBase}${addonsXml}.xml";
    my $file = "${outDir}${addonsXmlBase}${addonsXml}.xml";

    if (getstore($url, $file) == 200)
    {
        $fetched{$file} = 1;
        $addons .= read_file($file);
    }
}

my $addonsXmlUrl = $baseUrl . $addonsXmlBase;
my $addonsXmlFile = $outDir . $addonsXmlBase;

# Find correct addons XML file, as they tend to increment once in a while.
$i = 3;
while (head($addonsXmlUrl . "$i.xml"))
{
    $i++;
}
$i--;
$addonsXmlUrl .= "$i.xml";
$addonsXmlFile .= "$i.xml";

if (getstore($addonsXmlUrl, $addonsXmlFile) != 200)
{
    print RED "Failed to download: ", RESET, "$addonsXmlUrl\n";
    exit 1;
}
$fetched{$addonsXmlFile} = 1;
$addons .= read_file($addonsXmlFile);

print "\n", YELLOW "Parsing addon: ", RESET, "$addonsXmlFile\n";
while ($addons =~ /<(sdk:)?url>([^<]+)<\/(sdk:)?url>/g)
{
    my $u = $2;
    my $url = '';
    my $file = '';
    my $newBaseDir = '';
    if ($u =~ /^http/)
    {
        if ($u =~ /^\Q$baseUrl\E/)
        {
            $url = $u;
            my $tmpFile = substr($u, length($baseUrl));
            $newBaseDir = substr($tmpFile, 0, rindex($tmpFile, '/') + 1);
            if (defined $newBaseDir)
            {
                my $tmpDir = $outDir . $newBaseDir;
                make_path($tmpDir) unless -d $tmpDir;
            }
            $file = $outDir . $tmpFile;
        }
        else
        {
            print RED "Not fetching URL: ", RESET, "$u\n";
        }
    }
    else
    {
        $url = $baseUrl . $u;
        $newBaseDir = substr($u, 0, rindex($u, '/') + 1);
        if (defined $newBaseDir)
        {
            my $tmpDir = $outDir . $newBaseDir;
            make_path($tmpDir) unless -d $tmpDir;
        }
        $file = $outDir . $u;
    }
    
    if ($url ne '' and $file ne '' and not exists $fetched{$file})
    {
        if (getstore($url, $file) == 200)
        {
            $fetched{$file} = 1;
            my $addon = read_file($file);
            print "\n", YELLOW "Parsing addon: ", RESET, "$file\n";
            while ($addon =~ /(<(sdk:)?checksum(\s+type=['"](?<cksum_type_1>[^'"]+)['"])?>(?<cksum_1>[^<]+)<\/(sdk:)?checksum>\s*)?
                               <(sdk:)?url>(?<url>[^<]+)<\/(sdk:)?url>\s*
                              (<(sdk:)?checksum(\s+type=['"](?<cksum_type_2>[^'"]+)['"])?>(?<cksum_2>[^<]+)<\/(sdk:)?checksum>\s*)?
                             /gsx)
            {
                my $cksum_type = defined($+{cksum_type_1}) ? $+{cksum_type_1} :
                                     (defined($+{cksum_type_2}) ? $+{cksum_type_2} :
                                          'sha1');
                my $cksum = defined($+{cksum_1}) ? $+{cksum_1} :
                                (defined($+{cksum_2}) ? $+{cksum_2} : undef);
                my $a = $+{url};

                if ($a =~ /^http/)
                {
                    if ($a =~ /^\Q$baseUrl\E(.+)/)
                    {
                        $url = $a;
                        $file = $outDir . $1;
                    }
                    else
                    {
                        print RED "Not fetching URL: ", RESET, "$a\n";
                        next;
                    }
                }
                else
                {
                    $url = $baseUrl . $newBaseDir . $a;
                    my $tmpBaseDir = substr($a, 0, rindex($a, '/') + 1);
                    if (defined $tmpBaseDir)
                    {
                        my $tmpDir = $outDir . $newBaseDir . $tmpBaseDir;
                        make_path($tmpDir) unless -d $tmpDir;
                    }
                    $file = $outDir . $newBaseDir . $a;
                }

                if (-f $file)
                {
                    if (verify_hash($file, $cksum, $cksum_type) != 0)
                    {
                        unlink($file);
                    }
                }

                if (not -f $file)
                {
                    print YELLOW "Fetching: ", RESET, "$url ... ";
                    my $status = getstore($url, $file);

                    if ($status == 200)
                    {
                        if (verify_hash($file, $cksum, $cksum_type) != 0)
                        {
                            print RED "CHECKSUM FAILED!", RESET, "\n";
                            unlink($file);
                        }
                        else
                        {
                            $fetched{$file} = 1;
                            print GREEN "SUCCESS!", RESET, "\n";
                        }
                    }
                    else
                    {
                        print RED "FAILED! ($status)", RESET, "\n";
                    }
                }
                else
                {
                    $fetched{$file} = 1;
                }
            }
        }
    }
}

print "\nCleaning...\n";
find({ wanted => \&clean_files, no_chdir => 1 }, $outDir);
sub clean_files
{
    if (-f $_ and not defined $fetched{$_})
    {
        print YELLOW "Deleting: ", RESET, "$_\n";
        unlink($_);
    }
}

sub verify_hash
{
    my ($fname, $hash, $hash_type) = @_;

    if (not defined($hash) ||
        not defined($hash_type) ||
        lc($hash_type) ne 'sha1')
    {
        return 0;
    }

    $hash = lc($hash);
    $hash =~ s/^\s+|\s+$//g;

    my $fh;
    unless (open $fh, $fname)
    {
        return 1;
    }

    my $sha1 = Digest::SHA->new;
    $sha1->addfile($fh);

    my $this_hash = lc($sha1->hexdigest);

    if ($this_hash =~ /^$hash$/)
    {
        return 0;
    }

    return 1;
}
